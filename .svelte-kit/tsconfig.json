{
	"compilerOptions": {
		"paths": {
			"$routes": [
				"../src/routes"
			],
			"$routes/*": [
				"../src/routes/*"
			],
			"$components": [
				"../src/lib/components"
			],
			"$components/*": [
				"../src/lib/components/*"
			],
			"$layouts": [
				"../src/lib/layouts"
			],
			"$layouts/*": [
				"../src/lib/layouts/*"
			],
			"$stores": [
				"../src/lib/stores"
			],
			"$stores/*": [
				"../src/lib/stores/*"
			],
			"$data": [
				"../src/routes/data"
			],
			"$data/*": [
				"../src/routes/data/*"
			],
			"$config": [
				"../src/config"
			],
			"$config/*": [
				"../src/config/*"
			],
			"$lib": [
				"../src/lib"
			],
			"$lib/*": [
				"../src/lib/*"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.js",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"../src/service-worker.js",
		"../src/service-worker.ts",
		"../src/service-worker.d.ts"
	]
}